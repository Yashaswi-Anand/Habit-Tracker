<%- include('./partials/header.ejs') %>

<form action="/create" method="POST">
    <div class="d-flex justify-content-around w-50 mt-5" style="margin-left: 25%;">
        <input type="text" name="habitInput" placeholder=" Add your habit...">
        <button class="btn-hover" ><i class="fa-solid fa-plus"></i> &ensp; Add</button>
    </div>
</form>

<div class="center mt-2" style="margin-left: 20%;">
    <div class="container center">
        <% for(let task of habits) { %>
            <a href="/report" class="removeUnderline">
                <div id="<%= task.status[0] %>" class="row p-1 list-design w-75">
                    <div class="col-4">
                        <a><h3 class="text-white"> <%= task.habit %></h3> </a>
                    </div>
                    <div class="col-4">
                        <a href="/updateStatus/<%= task._id %>" class="removeUnderline"> 
                            <h5  class="mt-2 p-1 text-white">
                                <% if(task.status[0] == "DONE"){ %>
                                    <i  style="font-size: 1.5rem;" class="fa-solid fa-circle-check"></i>
                                <%  }else if(task.status[0] == "NOT-DONE"){ %>
                                    <i style="font-size: 1.5rem;" class="fa-solid fa-circle-xmark"></i>
                                <%  }else{ %>
                                    <i style="font-size: 1.5rem;" class="fa-solid fa-circle-minus"></i>
                                <% } %>
                            </h5>
                        </a>
                    </div>
                    <div class="col-4">
                        <a href="/delete/<%= task._id %>" class="removeUnderline"> 
                            <i class="fa-solid fa-trash-can text-white mt-2" style="font-size: 1.5rem;"></i>
                        </a>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</div>
